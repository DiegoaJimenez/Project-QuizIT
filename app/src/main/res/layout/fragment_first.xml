<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleCategorias"

            >

            <TextView
                android:id="@+id/titleCategorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categorias:"
                android:textColor="@color/yellow"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/nav_host_fragment_content_home" />
            <LinearLayout
                android:id="@+id/master"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scroll"
                android:layout_margin="16dp"
                >

                <LinearLayout
                    android:id="@+id/layoutmain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="5dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/git"

                        >
                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@color/git"
                            android:src="@drawable/iconlinux"
                            android:layout_margin="10dp"
                             />

                        <TextView
                            android:id="@+id/textQuiz1"
                            android:layout_width="wrap_content"
                            android:text="Linux"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:textColor="@color/grisText"

                            android:textSize="30sp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/textCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total preguntas : 50"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@color/grisClaro"
                        android:autoLink="web"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/subtitleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tomarQuiz"
                        android:textColor="@color/yellow"
                        android:textColorLink="@color/yellow"
                        android:gravity="center"
                        android:paddingTop="1dp"
                        android:paddingBottom="7dp"
                        android:background="@color/grisClaro"
                        android:textSize="14sp" />



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutmain2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginHorizontal="16dp"


                    >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <TextView
                        android:id="@+id/titleTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ejesd"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/subtitleTextView2"
                        android:layout_width="match_parent"
                        android:text="es"
                        android:layout_height="wrap_content"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/green"
                        android:text="Button" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/master2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/master"
                android:layout_margin="16dp"
                >

                <LinearLayout
                    android:id="@+id/layoutmain3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="16dp"

                    >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <TextView
                        android:id="@+id/titleTextView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/subtitleTextView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/green"
                        android:text="Button" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutmain4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginHorizontal="16dp"


                    >

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <TextView
                        android:id="@+id/titleTextView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ejesd"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/subtitleTextView4"
                        android:layout_width="match_parent"
                        android:text="es"
                        android:layout_height="wrap_content"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/green"
                        android:text="Button" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    />


</androidx.constraintlayout.widget.ConstraintLayout>